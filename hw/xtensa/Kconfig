config XTENSA_SIM
    bool

config XTENSA_VIRT
    bool
    select XTENSA_SIM
    select PCI_EXPRESS_GENERIC_BRIDGE
    select PCI_DEVICES

config XTENSA_XTFPGA
    bool
    select OPENCORES_ETH
    select PFLASH_CFI01
    select SERIAL

config XTENSA_ESP32
    bool
    select SSI
    select SSI_M25P80
    select UNIMP
    select OPENCORES_ETH
    select DWC_SDMMC
    select TMP105
    select LED

config XTENSA_ESP32S3
    bool
    select SSI
    select SSI_M25P80
    select UNIMP
    select OPENCORES_ETH
    select DWC_SDMMC
    select TMP105
    
config M5PAPER
    bool
    select XTENSA_ESP32
    select IT8951E
    select GT911
    select SSI_SD
    select ESP32_ADC
    select M5PAPER_BTN


